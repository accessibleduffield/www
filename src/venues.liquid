---
pagination:
    data: venues
    size: 1
    alias: venue
permalink: "venues/{{ venue.slug }}/"
---

<div class="w-11/12 p-5 mx-auto mt-5 mb-5 bg-white rounded-xl sm:text-base md:text-xl">
	{%- assign attributeCollection = venue.attributes -%}

	<div>
		<h1>
			<a class="underline text-lime-700" href="{{ venue.website }}" target="_blank">{{ venue.name }}</a>
		</h1>

		<address class="mb-5">
			{{ venue.address}}
			{{ venue.postcode}}
		</address>

		<p>Telephone: <a class="underline text-lime-700" href="tel:{{ venue.telephone }}">{{ venue.telephone }}</a></p>
	</div>

	<div class="mt-5 border-t border-gray-200">
		<dl class="sm:divide-y sm:divide-gray-200">
			{%- for attribute in attributeCollection -%}
				<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
					<dt class="text-sm font-medium text-gray-500">
						{{ attribute.name }}
					</dt>

					<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
						{{ attribute.available }}

						{%- if attribute.comment != '' -%}
							<br>Comments: {{ attribute.comment }}
						{%- endif -%}
					</dd>
				</div>
			{%- endfor -%}
		</dl>
	</div>

	<div class="mt-10">
		<ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
			{%- for photo in venue.photos -%}
				<li class="relative">
					<div class="block w-full overflow-hidden bg-gray-100 rounded-lg group aspect-w-10 aspect-h-7 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500">
						<img src="{{ photo.url }}" alt="" class="object-cover pointer-events-none group-hover:opacity-75">

						<button type="button" class="absolute inset-0 focus:outline-none">
							<span class="sr-only">View details for {{ photo.title }}</span>
						</button>
					</div>

					<p class="block mt-2 text-sm font-medium text-gray-900 truncate pointer-events-none">{{ photo.title }}</p>
				</li>
			{%- endfor -%}
		</ul>
	</div>
</div>
