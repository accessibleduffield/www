---
pagination:
    data: footpaths
    size: 1
    alias: footpath
permalink: "footpaths/{{ footpath.number | slug }}/"
---

<h1>Footpath Detail</h1>

Footpath: {{ footpath.number }} from {{ footpath.from }} to {{ footpath.to }}
Audit date: {{ footpath.audit }}
Auditor: {{ footpath.auditor }}

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="flex flex-col">
	<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
		<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
			<div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
				<table class="min-w-full divide-y divide-gray-200">
					<thead>
						<tr>
							<th scope="col"
								class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase bg-gray-50">
								Attribute
							</th>
							<th scope="col"
								class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase bg-gray-50">
								Available
							</th>
							<th scope="col"
								class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase bg-gray-50">
								Comment
							</th>
						</tr>
					</thead>

					<tbody>
						{%- for attribute in footpath.attributes -%}
							<tr class="{%- cycle 'bg-white', 'bg-gray-50' -%}">
								<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
									Jane Cooper
								</td>
								<td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap">
									{{ attribute.available }}
								</td>
								<td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap">
									{{ attribute.comment }}
								</td>
							</tr>

						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
